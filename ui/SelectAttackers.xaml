
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="Skin.xaml"/>
   </ResourceDictionary.MergedDictionaries>
   <Border x:Key="SelectAttackers">
       <Border.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource Label}">
          <Setter Property="FontSize" Value="17"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource LinkButton}">
          <Setter Property="FontSize" Value="17"/>
        </Style>
      </Border.Resources>
      <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
       <Image Height="20" Margin="0,0,10,0" Source="..\media\images\icon.png"/>
        <TextBlock Foreground="#FFD700" Text="Select attackers."/>                   
        <TextBlock Margin="10,0,0,0" FontStyle="Italic" Text="(Press Enter, to complete the declaration.) "/>                   
      </StackPanel>
   </Border>
</ResourceDictionary>