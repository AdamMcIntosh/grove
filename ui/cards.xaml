   <Viewbox x:Key="Grizzly Bears" Stretch="Uniform">
      <Border Width="324" Height="462">
         <StackPanel>
            <StackPanel.Background>
               <ImageBrush ImageSource="..\media\images\green-card.png"/>
            </StackPanel.Background>
            <DockPanel>
               <TextBlock
                  Margin="10,4,0,0"
                  FontFamily="Arial"
                  FontSize="17"
                  Foreground="White"
                  Text="Grizzly Bears"/>
               <StackPanel HorizontalAlignment="Right" Margin="0,3,10,0" Orientation="Horizontal">
                  <Image Height="20" Source="..\media\images\1.png"/>
                  <Image Height="20" Source="..\media\images\g.png"/>
               </StackPanel>
            </DockPanel>
            <Grid Margin="0,6,0,0">
              <Image
                 Width="273"
                 Height="220"                 
                 Source="grizzly-bears.jpg"
                 Stretch="Fill"/>
                <Grid Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30,0,0,5">
                  <Image  Source="..\media\images\counter.png"  />
                  <TextBlock
                    FontSize="25"
                    Text="3"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontFamily="Arial"
                    Margin="0,0,1,0"
                  />                                     
                </Grid>
            </Grid>
            <TextBlock
               Margin="20,6,0,0"
               FontFamily="Arial"
               FontSize="16"
               Foreground="White"
               Text="Creature - Bear"/>
            <Viewbox
               Width="260"
               Height="135"
               HorizontalAlignment="Left"
               Margin="30,5,0,0"
               Stretch="Uniform">
               <StackPanel MaxHeight="135" HorizontalAlignment="Left">
                  <WrapPanel Width="250" Margin="0,5,0,0">
                     <TextBlock FontSize="12" FontStyle="Italic">'We cannot forget that among all of 
                     </TextBlock>
                     <TextBlock FontSize="12" FontStyle="Italic">Dominaria's wonders, a system of life exists, 
                     </TextBlock>
                     <TextBlock FontSize="12" FontStyle="Italic">with prey and predators that will never fight
                     </TextBlock>
                     <TextBlock FontSize="12" FontStyle="Italic">wars nor vie for ancient power.'
                     </TextBlock>
                     <TextBlock Width="250"/>
                     <TextBlock FontSize="12" FontStyle="Italic">—Jolrael, empress of beasts'
                     </TextBlock>
                  </WrapPanel>
               </StackPanel>
            </Viewbox>
            <Grid Margin="0,12,0,0">
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
               </Grid.ColumnDefinitions>
               <StackPanel Grid.Column="2" Margin="0,5,15,0" Orientation="Horizontal">
                  <TextBlock
                     FontFamily="Arial"
                     FontSize="22"
                     Foreground="White"
                     Text="2"/>
                  <TextBlock
                     FontFamily="Arial"
                     FontSize="22"
                     Foreground="White"
                     Text="/2"/>
               </StackPanel>
            </Grid>
         </StackPanel>
      </Border>
   </Viewbox>
