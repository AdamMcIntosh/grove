                        <Viewbox Width="90" Stretch="Uniform" >                                        
                            <Image Source="card-back-1.jpg" />                              
                        </Viewbox>                              
                    </Border> 
                    
                     <Border BorderBrush="Black" BorderThickness="3">
                        <Viewbox Width="90" Stretch="Uniform" >                                        
                            <Image Source="card-back-1.jpg" />                              
                        </Viewbox>                              
                    </Border> 
                    
                     <Border BorderBrush="Black" BorderThickness="3">
