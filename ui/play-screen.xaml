                                  </Viewbox>
                              </Canvas>
                          </Border> 
                          <Border Margin="0,0,3,0" >                               
                              <Canvas Width="115" ClipToBounds="True">
                                  <Viewbox Width="115" Stretch="UniformToFill" StretchDirection="DownOnly" >                                        
                                      <Image Source="card-back-1.jpg" />                              
                                  </Viewbox>
                              </Canvas>
                          </Border> 
