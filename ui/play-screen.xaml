                              <TextBlock Text="10" Foreground="#fffb00" />
                          </StackPanel>                                                           
                        </Grid>
                    </Grid>                                                                      
                    
                    <ScrollViewer Grid.Column="1" Style="{StaticResource LeftRigtScroller}" Margin="8,4,8,4">
                      <ScrollViewer.Resources>
                          <Style TargetType="Border">                          
                            <Setter Property="BorderBrush" Value="#99000000"/>
                            <Setter Property="BorderThickness" Value="3"/>
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>                                                
                                        <Storyboard >                                                    
                                            <ColorAnimation 
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                                From="#99000000" To="#77FFFBC3"
                                                Duration="0:0:0.4"/>                                                                                                        
                                        </Storyboard>                                                
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard >
                                            <ColorAnimation 
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                                From="#77FFFBC3" To="#99000000"
                                                Duration="0:0:0.4"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                                                                                                                                                                             
                            </Style.Triggers>                                    
                        </Style>                      
                      </ScrollViewer.Resources>
                      
