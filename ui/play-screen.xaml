                  <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                        <GradientStop Color="#99000000" Offset="0.0" />
        <GradientStop Color="#dd000000" Offset="1.0" />
                  </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />                
                    </Grid.ColumnDefinitions>
                    
