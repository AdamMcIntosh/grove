<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="Skin.xaml"/>      
   </ResourceDictionary.MergedDictionaries>
   <Grid x:Key="QuitGame" Background="#dd000000">  
   <Grid.Resources>     
        <Style TargetType="Button" BasedOn="{StaticResource LinkButton}">
          <Setter Property="FontSize" Value="30"/>
        </Style>         
   </Grid.Resources>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="800">
      <TextBlock Margin="70,0,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="40" Foreground="#FFE03A">It is a mistake to think you can solve any major problems just with potatoes...</TextBlock>
      <StackPanel Width="500" Margin="0,60,0,0">
        <Button HorizontalAlignment="Center" FontSize="35" >Return to the game</Button>
        <StackPanel Margin="60" HorizontalAlignment="Center">
          <Button HorizontalAlignment="Left">Rematch</Button>
          <Button HorizontalAlignment="Left">Quit to main menu</Button>
          <Button HorizontalAlignment="Left">Quit to Windows</Button>                
        </StackPanel>
        
        
      </StackPanel>      
    </StackPanel>
   </Grid>
      
</ResourceDictionary>