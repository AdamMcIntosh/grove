<UserControl x:Class="Grove.UserInterface.QuitGame.View" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Background="{StaticResource OverlayBackground}">
		<Grid.Resources>
			<Style TargetType="Button" BasedOn="{StaticResource LinkButton}">
				<Setter Property="FontSize" Value="30" />
				<Setter Property="Foreground" Value="#fff" />
			</Style>
		</Grid.Resources>

		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="800">
			<TextBlock Margin="70,0,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="40" Foreground="#FFE03A">
				It is a mistake to think you can solve any major problems just with potatoes...
			</TextBlock>
			<StackPanel Width="500" Margin="0,60,0,0">
				<Button x:Name="Cancel" HorizontalAlignment="Center" FontSize="35" Foreground="#FDEFA0">Return to the game</Button>
				<StackPanel Margin="60" HorizontalAlignment="Center">
					<Button x:Name="Rematch" HorizontalAlignment="Left">Rematch</Button>
					<Button x:Name="QuitToMainMenu" HorizontalAlignment="Left">Quit to main menu</Button>
					<Button x:Name="QuitToOperatingSystem" HorizontalAlignment="Left">Quit to Windows</Button>
				</StackPanel>
			</StackPanel>
		</StackPanel>

	</Grid>
</UserControl>