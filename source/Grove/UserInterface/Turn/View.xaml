<UserControl x:Class="Grove.UserInterface.Turn.View" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border>
		<Border.Resources>
			<Style BasedOn="{StaticResource Label}" TargetType="TextBlock">
				<Setter Property="Margin" Value="0,0,5,0" />
			</Style>
		</Border.Resources>
		<StackPanel Orientation="Horizontal">
			<!-- Turn number -->
			<ContentControl Style="{StaticResource Separator}">
				<StackPanel Margin="6,0,4,0" Orientation="Horizontal">
					<TextBlock Text="Turn:" />
					<TextBlock Foreground="#FFD700" Text="{Binding TurnNumber}" />
				</StackPanel>
			</ContentControl>
			<!-- End Turn number -->
            
			<!-- Turn steps -->                        
			<ItemsControl x:Name="Steps">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>                       
			<!-- End Turn steps -->
		</StackPanel>
	</Border>
</UserControl>