<UserControl x:Class="Grove.Ui.SelectDeck.View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:grove="clr-namespace:Grove.Ui"
             xmlns:Core="clr-namespace:Grove.Core" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
             Background="#000">
    
    <UserControl.Resources>       
        <Style TargetType="Grid">
            <Setter Property="Opacity" Value="0.0"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.2" To="1.0" Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style BasedOn = "{StaticResource ScrollBar}"
			                TargetType = "{x:Type ScrollBar}" />
    </UserControl.Resources>
    
    <Grid  Background="{StaticResource StartScreenBackground}">       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#11ffffff" BorderBrush="#33ffffff" BorderThickness="0,0,0,4">
            <StackPanel Margin="30"  Orientation="Horizontal" >
                <Image VerticalAlignment="Center" Height="50" Source="{grove:Media 'icon.png'}"></Image>
                <TextBlock VerticalAlignment="Center"  Text="{Binding Title}" Foreground="#fff" FontSize="40" Margin="30,0,0,0" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,40,0,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="0"  BorderBrush="#33ffffff" Background="#11ffffff" CornerRadius="2" BorderThickness="2" Width="350">
                <Border.Resources>
                    <Style TargetType="{x:Type ListBox}">
                        <Setter Property="SnapsToDevicePixels" Value="true"/>
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBox}">                                    
                                        <ScrollViewer 
                                                Margin="0"
                                                Focusable="false"  VerticalScrollBarVisibility="Auto">
                                            <StackPanel IsItemsHost="True" />
                                        </ScrollViewer>                                    
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="SnapsToDevicePixels" Value="true"/>
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border  Name="Border" SnapsToDevicePixels="true" Background="#11000000"  BorderThickness="0,0,0,2" BorderBrush="#33ffffff" Cursor="Hand">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="true">
                                            <Setter TargetName="Border" Property="Background" Value="#11ffffff"/>
                                        </Trigger>                                        
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>


                </Border.Resources>
                
                
                    <ListBox ItemsSource = "{Binding Path=Decks}" SelectedItem="{Binding Selected}" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>                                                                                                
                                    <Grid Margin="15,5,10,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}" Foreground="#fff" FontSize="15" />

                                        <ItemsControl Grid.Column="1"                                      
						              ItemsSource = "{Binding Path=Colors, Converter={x:Static grove:Converters.ManaSymbolListToImages}}" >
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation = "Horizontal" HorizontalAlignment="Right" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Source = "{Binding Path=.}" Margin="5,0,0,0" Height = "15" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>


                                        <TextBlock Grid.Row="1" Text="{Binding CardCount, StringFormat={}{0} cards}" Foreground="#aaa" FontSize="15"/>
                                                                                                                                
                                        <ItemsControl Grid.Column="1" Grid.Row="1"                                     
						              ItemsSource = "{Binding Path=Rating, Converter={x:Static grove:Converters.Rating}}" >
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation = "Horizontal" HorizontalAlignment="Right" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Margin="5,0,0,0" Source = "{Binding Path=.}" Height = "15" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>                                    

                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>                
            </Border>
           
            
            <Border Grid.Column="1" Margin="20,0,20,0" BorderBrush="#22ffffff" CornerRadius="4" BorderThickness="2" Width="450" >
                <Border.Resources>
                    <DataTemplate DataType="{x:Type Core:DeckRow}">
                        <StackPanel Margin="5,0,0,0" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style x:Key="CardName" TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>                                                
                                        </Trigger>                                            
                                    </Style.Triggers>
                                </Style>
                                    
                            </StackPanel.Resources>
                            <TextBlock Foreground="#fff" FontSize="15" Text="{Binding Count, StringFormat=' {0}x'}"/>
                                
                            <TextBlock Style="{StaticResource CardName}" Cursor="Hand" Foreground="#FFD700" Margin="5,0,0,0" FontSize="15" Text="{Binding CardName}" >
                                <i:Interaction.Triggers>
				                    <i:EventTrigger EventName = "MouseEnter" >
					                    <cal:ActionMessage MethodName = "ChangeSelectedCard" >
                                            <cal:Parameter Value="{Binding CardName}"/>                                                
                                        </cal:ActionMessage>
				                    </i:EventTrigger>				
			                    </i:Interaction.Triggers>                                    
                            </TextBlock>
                                
                        </StackPanel>
                    </DataTemplate>
                        
                    <Style x:Key="CardGroup" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#fff"/>
                        <Setter Property="FontSize" Value="18"/>                            
                        <Setter Property="Margin" Value="0,10,0,5"/>
                            
                    </Style>                
                </Border.Resources>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30,0,0,10">
                        <TextBlock Style="{StaticResource CardGroup}" Text="{Binding Selected.CreaturesCount, StringFormat='Creatures ({0})'}"/>
                        <ItemsControl ItemsSource = "{Binding Path=Selected.Creatures}" />
                        <TextBlock Style="{StaticResource CardGroup}" Text="{Binding Selected.SpellsCount, StringFormat='Spells ({0})'}"/>
                        <ItemsControl ItemsSource = "{Binding Path=Selected.Spells}" />
                        <TextBlock Style="{StaticResource CardGroup}" Text="{Binding Selected.LandsCount, StringFormat='Lands ({0})'}"/>
                        <ItemsControl ItemsSource = "{Binding Path=Selected.Lands}" />
                    </StackPanel>
                </ScrollViewer>

            </Border>

            <StackPanel Grid.Column="2" Width="300">
                <Border BorderBrush="#444" Background="#000" BorderThickness="1" CornerRadius="8"   VerticalAlignment="Top" >
                    <ContentControl Margin="12" Content="{Binding SelectedCard}" ContentTemplate = "{StaticResource FaceUpCard}" />
                </Border>
                <TextBlock Foreground="#eee" FontSize="14" TextWrapping="Wrap" Margin="10,20,10,0" Text="{Binding Selected.Description}"/>
            </StackPanel>

        </Grid>


        <Border Margin="0,30,0,0" Grid.Row="2" Background="#1affffff" BorderBrush="#33ffffff" BorderThickness="0,4,0,0">
            <Grid Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Back" Style="{StaticResource LeftButton}" Grid.Column="0" FontSize="20" >Back</Button>
                <Button x:Name="Forward" Style="{StaticResource RightButton}" Grid.Column="2" Foreground="#FFEE94"  FontSize="30" 
                        Visibility="{Binding CanStart, Converter={x:Static grove:Converters.BooleanToVisibility}}" Content="{Binding NextCaption}" />
                <TextBlock Text="Game is starting, please wait..." FontSize="18" Grid.Column="2" Foreground="#fff" Visibility="{Binding IsStarting, Converter={x:Static grove:Converters.BooleanToVisibility}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
